{
    "compilerOptions": {
        "baseUrl": "./",
        "rootDir": "src",
        "paths": {
            "~/*": ["./src/*"],
            "@core/*": ["./src/core/*"],
            "@figma/*": ["./src/figma/*"],
            "@mcp/*": ["./src/mcp/*"],
            "@shared/*": ["./src/figma/shared/*"],
            "@extractors/*": ["./src/figma/extractors/*"],
            "@transformers/*": ["./src/figma/transformers/*"]
        },

        "target": "ES2022",
        "lib": ["ES2022", "DOM"],
        "module": "ESNext",
        "moduleResolution": "bundler",
        "resolveJsonModule": true,
        "allowImportingTsExtensions": false,
        "allowJs": true,
        "checkJs": true,

        "outDir": "./dist",
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "removeComments": true,
        "noEmit": true,

        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": ["src/**/*"]
}
